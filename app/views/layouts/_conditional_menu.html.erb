<% if current_user %>
    <%= link_to "Today", day_path(Day.today(current_user.id)) %>
    <%= link_to "Tomorrow", day_path(Day.tomorrow(current_user.id)) %>
    <%= link_to "All Days", days_path %>
    <%= link_to "All Tasks", tasks_path %>        
    <%= link_to "Log Out", logout_path %>
<% else%>
    <%= link_to "Log In", login_path %>
    <%= link_to "Create Account", new_user_path %>
<% end %>