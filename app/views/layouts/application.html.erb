<!DOCTYPE html>
<html>
  <head>
    <title>Bujo3Point0</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700|Source+Sans+Pro" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <div id="all-wrap" class="clearfix">
      <div id="menu-wrap">
        <a href="/days/today"><img id="logo" src="/images/bujo_logo_color.png" alt="" /></a>
        <div id="menu">
        <% if current_user %>
          <a href="/logout">Log Out</a>
        <% else%>
          <a href="/login">Log In</a>
          <a href="/users/new">Create Account</a>
        <% end %>
          <div class="line">
          </div>
          <a href="/help">Help</a>
          <a href="/about">About</a>
        </div>
      </div>
      <img id="bookmark" src="/images/bookmark-01.png" alt="" />
      <div id="content-wrap">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
